@model CastroMotors.Models.SetPasswordViewModel
@{
    ViewBag.Title = "Criar Senha";
}

<main aria-labelledby="title" class="d-flex flex-column align-items-center justify-content-center">
    <div class="card shadow-lg p-4" style="max-width: 500px; width: 100%;">
        <h2 id="title" class="text-center text-primary mb-4">@ViewBag.Title</h2>
        <p class="text-center text-muted">
            Você ainda não possui uma senha para acesso direto ao site. Crie uma conta local para poder entrar sem um login externo.
        </p>

        @using (Html.BeginForm("SetPassword", "Manage", FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()

            <h5 class="text-muted text-center">Criar Login Local</h5>
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger text-center" })

            <div class="mb-3">
                @Html.LabelFor(m => m.NewPassword, "Nova Senha", new { @class = "form-label fw-semibold" })
                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", placeholder = "Digite sua nova senha" })
                @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.ConfirmPassword, "Confirmar Senha", new { @class = "form-label fw-semibold" })
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirme sua senha" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
            </div>

            <div class="d-grid mt-4">
                <input type="submit" value="Criar Senha" class="btn btn-primary btn-lg" />
            </div>
        }
    </div>
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
