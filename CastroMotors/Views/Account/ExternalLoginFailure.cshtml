@{
    ViewBag.Title = "Falha no Login";
}

<main aria-labelledby="title" class="d-flex flex-column align-items-center justify-content-center">
    <div class="card shadow p-4 text-center" style="max-width: 500px; width: 100%;">
        <h2 id="title" class="text-center text-danger mb-3">@ViewBag.Title</h2>
        <h4 class="text-danger">Não foi possível fazer login com o serviço externo.</h4>

        <p class="text-muted mt-4">
            Tente novamente ou escolha outro método de autenticação.
        </p>
        <div class="text-center mt-3">
            @Html.ActionLink("Voltar para o login", "Login", "Account", new { @class = "btn btn-outline-primary btn-lg" })
        </div>
    </div>
</main>
