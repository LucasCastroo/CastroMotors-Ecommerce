@model CastroMotors.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Esqueceu sua senha?";
}

<main aria-labelledby="title" class="d-flex flex-column align-items-center justify-content-center">
    <div class="card shadow p-4" style="max-width: 500px; width: 100%;">
        <h2 id="title" class="text-center text-primary mb-4">@ViewBag.Title</h2>

        @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()
            <p class="text-center text-muted">Insira seu e-mail para receber o link de redefinição de senha.</p>
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger text-center" })

            <div class="mb-3">
                @Html.LabelFor(m => m.Email, "E-mail", new { @class = "form-label fw-semibold" })
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Digite seu e-mail" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>

            <div class="d-grid">
                <input type="submit" class="btn btn-primary btn-lg" value="Enviar link de redefinição" />
            </div>
        }
    </div>
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
