@model CastroMotors.Models.Car

@{
    ViewBag.Title = "Excluir Carro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center my-4 display-4 text-danger">@ViewBag.Title</h2>

<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-lg p-4 mb-5 bg-white rounded" style="width: 100%; max-width: 700px;">
        <h4 class="card-title text-center text-danger mb-4">Tem certeza de que deseja excluir este carro?</h4>

        <!-- Imagem do Carro -->
        <div class="text-center mb-4">
            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <img src="@Url.Content(Model.ImagePath)" alt="Imagem do Carro" class="img-fluid rounded" style="max-height: 300px; object-fit: cover;">
            }
            else
            {
                <p class="text-muted">Sem imagem disponível</p>
            }
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold text-secondary">Marca</label>
            <p class="form-control-plaintext">@Model.Brand.Name</p>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold text-secondary">Modelo</label>
            <p class="form-control-plaintext">@Model.Model</p>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold text-secondary">Ano</label>
            <p class="form-control-plaintext">@Model.Year</p>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold text-secondary">Cor</label>
            <p class="form-control-plaintext">@Model.Color</p>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold text-secondary">Preço</label>
            <p class="form-control-plaintext">@Model.Price.ToString("C")</p>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold text-secondary">Descrição</label>
            <p class="form-control-plaintext">@Model.Description</p>
        </div>

        <!-- Botões de Confirmação -->
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="d-flex justify-content-center mt-4">
                <input type="submit" value="Excluir" class="btn btn-danger btn-lg mx-2" />
                @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-secondary btn-lg mx-2" })
            </div>
        }
    </div>
</div>
