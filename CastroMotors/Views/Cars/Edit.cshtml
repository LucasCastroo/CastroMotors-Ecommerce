@model CastroMotors.Models.Car

@{
    ViewBag.Title = "Edit Car";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center my-4 display-4">@ViewBag.Title</h2>

<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    @using (Html.BeginForm("Edit", "Cars", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="card shadow-lg p-4 mb-5 bg-white rounded" style="width: 100%; max-width: 900px;">
            <h4 class="card-title text-center text-primary mb-4">Edit Car Information</h4>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.CarId)
            @Html.HiddenFor(model => model.RowVersion)

            <!-- Primeira Linha de Campos -->
            <div class="row mb-3">
                <div class="col-md-4">
                    @Html.LabelFor(model => model.Model, new { @class = "form-label fw-bold" })
                    @Html.EditorFor(model => model.Model, new { htmlAttributes = new { @class = "form-control shadow-sm" } })
                    @Html.ValidationMessageFor(model => model.Model, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-4">
                    @Html.Label("Brand", new { @class = "form-label fw-bold" })
                    @Html.DropDownList("BrandId", null, "Selecione a Marca", new { @class = "form-select shadow-sm" })
                    @Html.ValidationMessageFor(model => model.BrandId, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-4">
                    @Html.Label("Category", new { @class = "form-label fw-bold" })
                    @Html.DropDownList("CategoryId", null, "Selecione a Categoria", new { @class = "form-select shadow-sm" })
                    @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- Segunda Linha de Campos -->
            <div class="row mb-3">
                <div class="col-md-4">
                    @Html.LabelFor(model => model.Year, new { @class = "form-label fw-bold" })
                    @Html.EditorFor(model => model.Year, new { htmlAttributes = new { @class = "form-control shadow-sm" } })
                    @Html.ValidationMessageFor(model => model.Year, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-4">
                    @Html.LabelFor(model => model.Color, new { @class = "form-label fw-bold" })
                    @Html.EditorFor(model => model.Color, new { htmlAttributes = new { @class = "form-control shadow-sm" } })
                    @Html.ValidationMessageFor(model => model.Color, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-4">
                    @Html.LabelFor(model => model.Price, new { @class = "form-label fw-bold" })
                    @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control shadow-sm" } })
                    @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- Descrição -->
            <div class="row mb-3">
                <div class="col-12">
                    @Html.LabelFor(model => model.Description, new { @class = "form-label fw-bold" })
                    @Html.TextAreaFor(model => model.Description, new { @class = "form-control shadow-sm", rows = 3 })
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- Upload de Imagem -->
            <div class="row mb-3">
                <div class="col-12">
                    <label for="CarImage" class="form-label fw-bold">Upload de Imagem</label>
                    <input type="file" name="CarImage" id="CarImage" class="form-control shadow-sm" />
                    <p class="text-muted mt-2">Deixe em branco para manter a imagem atual.</p>
                </div>
            </div>

            <!-- Botão de Envio -->
            <div class="d-flex justify-content-center">
                <input type="submit" value="Save" class="btn btn-primary btn-lg mt-4 px-5 shadow" />
            </div>
        </div>
    }
</div>

<div class="text-center mt-3">
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
