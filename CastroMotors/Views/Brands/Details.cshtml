@model CastroMotors.Models.Brand

@{
    ViewBag.Title = "Detalhes da Marca";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center my-4 display-4 text-primary">@ViewBag.Title</h2>

<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-lg p-4 mb-5 bg-white rounded" style="width: 100%; max-width: 700px;">
        <h4 class="card-title text-center text-dark mb-4">Informações da Marca</h4>

        <div class="mb-3">
            <label class="form-label fw-bold text-secondary">Nome</label>
            <p class="form-control-plaintext">@Model.Name</p>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold text-secondary">País de Origem</label>
            <p class="form-control-plaintext">@Model.CountryOfOrigin</p>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold text-secondary">Ano de Fundação</label>
            <p class="form-control-plaintext">@Model.FoundedYear</p>
        </div>

        <!-- Botão para retornar -->
        <div class="text-center mt-4">
            @Html.ActionLink("Voltar para a Lista", "Index", null, new { @class = "btn btn-secondary btn-lg shadow" })
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
